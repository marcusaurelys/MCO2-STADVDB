[Unit]
Description=Run Streamlit and Flask Applications
After=network.target

[Service]
ExecStart=/bin/bash -c "streamlit run /root/MCO2-STADVDB/app.py --server.port 80 & flask --app /root/MCO2-STADVDB/server run -p 5000"
Restart=always
User=root
WorkingDirectory=/root/MCO2-STADVDB
Environment="PATH=/root/MCO2-STADVDB/venv/bin"

[Install]
WantedBy=multi-user.target

