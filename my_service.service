[Unit]
Description=Run Streamlit and Flask Applications
After=network.target

[Service]
ExecStart=/bin/bash -c "streamlit run /root/app.py --server.port 80 & flask --app /root/server run -p 5000"
Restart=always
User=your_username
WorkingDirectory=/path/to/working/directory
Environment="PATH=/path/to/your/python/environment/bin"

[Install]
WantedBy=multi-user.target

